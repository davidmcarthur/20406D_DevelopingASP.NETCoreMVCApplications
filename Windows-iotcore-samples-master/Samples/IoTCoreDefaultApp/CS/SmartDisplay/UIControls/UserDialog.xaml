<ContentDialog
    x:Class="SmartDisplay.Controls.UserDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    PrimaryButtonCommand="{x:Bind ViewModel.SetResultCommand}"
    PrimaryButtonCommandParameter="{StaticResource TrueBoolean}"
    SecondaryButtonCommand="{x:Bind ViewModel.SetResultCommand}"
    SecondaryButtonCommandParameter="{StaticResource FalseBoolean}">

    <Grid>
        <TextBlock Text="{x:Bind ViewModel.Question}" TextWrapping="WrapWholeWords" HorizontalAlignment="Left" VerticalAlignment="Center" />
    </Grid>
</ContentDialog>
