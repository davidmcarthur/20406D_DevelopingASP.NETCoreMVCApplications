<UserControl
    x:Class="SmartDisplay.Controls.LoginPopupControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="using:SmartDisplay.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Popup x:Name="PopupElement" IsLightDismissEnabled="True">
        <Border x:Name="BorderElement">
            <Viewbox x:Name="ViewboxElement">
                <ctrl:DevicePortalLoginControl x:Name="WdpLoginControl" Background="Transparent" />
            </Viewbox>
        </Border>
    </Popup>
</UserControl>
