<Page
    x:Class="InternetRadioController.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InternetRadioController"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="700" Width="350">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <Grid Height="40" Width="100"></Grid>
            <TextBlock FontSize="24" FontWeight="Bold">Radio Setup</TextBlock>
            <TextBlock>Choose a radio to connect to:</TextBlock>
            <ListBox Height="300" Name="AvailableRadios" DisplayMemberPath="Name"></ListBox>
            <Button Click="Button_Click">Connect</Button>
        </StackPanel>
    </Grid>
</Page>
